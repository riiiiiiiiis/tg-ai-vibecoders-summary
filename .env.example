# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/database

# OpenRouter AI Configuration (Required)
OPENROUTER_API_KEY=sk-or-v1-...
OPENROUTER_MODEL=google/gemini-2.5-pro

# OpenRouter Optional Configuration
OPENROUTER_TIMEOUT_MS=20000
LLM_DEBUG_VERBOSE=1
LLM_TEXT_CHAR_BUDGET=80000

# Telegram Bot Configuration (Optional - for sending reports to Telegram)
# Get your bot token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=1234567890:ABCdefGHIjklMNOpqrsTUVwxyz

# Your Telegram chat ID (can be a group, supergroup, or channel)
# Use @userinfobot to get your chat ID
TELEGRAM_CHAT_ID=-1001234567890

# Optional: Thread ID for forum topics (if sending to a specific forum thread)
TELEGRAM_THREAD_ID=123
